/* pages/ai/ai.wxss */
.ai-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 消息列表 */
.message-list {
  padding: 30rpx;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #667eea;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.message-avatar.assistant {
  background: linear-gradient(135deg, #1AAD19 0%, #129611 100%);
  font-size: 24rpx;
  font-weight: 500;
}

.message-content {
  max-width: 70%;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  background: #fff;
  margin: 0 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}

.message.user .message-content {
  background: #1AAD19;
  color: #fff;
}

/* 加载动画 */
.message-content.loading {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #999;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 推荐问题 */
.suggestions {
  padding: 0 30rpx;
}

.suggestions-title {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.suggestion-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.suggestion-item {
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #1AAD19;
  border: 1rpx solid #1AAD19;
}

/* 输入区域 */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input-box {
  flex: 1;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 20rpx;
  background: #1AAD19;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  border: none;
}

.send-btn[disabled] {
  background: #ccc;
}

/* 操作按钮 */
.action-btn {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #1AAD19 0%, #129611 100%);
  color: #fff;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

/* AI生成标识 */
.ai-tag {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
  font-size: 22rpx;
  color: #999;
}

.ai-tag .ai-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* pages/appointment/appointment.wxss */
.appointment-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 180rpx;
}

/* 步骤指示 */
.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  background: #fff;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-num {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 50%;
  background: #ddd;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.step.active .step-num {
  background: #1AAD19;
  color: #fff;
}

.step-text {
  font-size: 22rpx;
  color: #999;
}

.step.active .step-text {
  color: #1AAD19;
}

.step-line {
  width: 50rpx;
  height: 4rpx;
  background: #ddd;
  margin: 0 10rpx;
  margin-bottom: 26rpx;
}

.step-line.active {
  background: #1AAD19;
}

/* 返回按钮 */
.back-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  color: #1AAD19;
  font-size: 28rpx;
}

.back-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 内容区 */
.step-content {
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

/* 已选信息 */
.selected-info {
  background: #fff;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.selected-info .label {
  color: #999;
  font-size: 26rpx;
}

.selected-info .value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.selected-info .change {
  color: #1AAD19;
  font-size: 26rpx;
}

/* 门店列表 */
.store-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid transparent;
}

.store-item.selected {
  border-color: #1AAD19;
  background: #f0fff0;
}

.store-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.store-address {
  font-size: 26rpx;
  color: #666;
}

/* 会员选择 */
.member-options {
  display: flex;
  gap: 20rpx;
}

.member-option {
  flex: 1;
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  text-align: center;
  border: 4rpx solid transparent;
}

.member-option.selected {
  border-color: #1AAD19;
  background: #f0fff0;
}

.member-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.member-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.member-desc {
  font-size: 24rpx;
  color: #999;
}

/* 卡列表 */
.card-list {
  margin-bottom: 20rpx;
}

.card-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  color: #fff;
  border: 4rpx solid transparent;
}

.card-item.selected {
  border-color: #1AAD19;
  box-shadow: 0 0 0 4rpx rgba(26, 173, 25, 0.3);
}

.card-item.disabled {
  background: linear-gradient(135deg, #999 0%, #666 100%);
  opacity: 0.7;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-name {
  font-size: 32rpx;
  font-weight: 600;
}

.card-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255,255,255,0.2);
}

.card-status.valid {
  background: rgba(26, 173, 25, 0.8);
}

.card-status.expired, .card-status.used {
  background: rgba(255,0,0,0.5);
}

.card-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 服务选择 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-list.multi {
  flex-direction: row;
  flex-wrap: wrap;
}

.service-list.multi .service-item {
  flex: 1;
  min-width: 200rpx;
}

.service-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  border: 4rpx solid transparent;
}

.service-item.selected {
  border-color: #1AAD19;
  background: #f0fff0;
}

.service-check {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border: 4rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 20rpx;
  color: #1AAD19;
  font-weight: bold;
}

.service-item.selected .service-check {
  border-color: #1AAD19;
  background: #1AAD19;
  color: #fff;
}

.service-icon {
  font-size: 50rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.service-duration {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 下一步按钮 */
.next-btn-container {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.next-btn {
  width: 100%;
}

/* 日期选择 */
.date-scroll {
  white-space: nowrap;
}

.date-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 10rpx 0;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 4rpx solid transparent;
  min-width: 120rpx;
}

.date-item.selected {
  border-color: #1AAD19;
  background: #f0fff0;
}

.date-weekday {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.date-day {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 员工选择 */
.staff-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid transparent;
}

.staff-item.selected {
  border-color: #1AAD19;
  background: #f0fff0;
}

.staff-avatar {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.staff-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.staff-intro {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 时间选择 */
.time-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.time-item {
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 4rpx solid transparent;
}

.time-item.selected {
  border-color: #1AAD19;
  background: #f0fff0;
  color: #1AAD19;
}

/* 加载和空状态 */
.loading, .empty {
  text-align: center;
  padding: 60rpx;
  color: #999;
}

.empty-tip {
  font-size: 24rpx;
  margin-top: 16rpx;
}

.retry-btn {
  margin-top: 30rpx;
  color: #1AAD19;
  font-size: 28rpx;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary {
  flex: 1;
  font-size: 26rpx;
  color: #666;
}

.submit-btn {
  padding: 20rpx 60rpx;
}

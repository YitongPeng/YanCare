/* pages/my/my.wxss */
.my-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 用户信息 */
.user-section {
  background: linear-gradient(135deg, #1AAD19 0%, #129611 100%);
  padding: 60rpx 30rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #fff;
  margin-right: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 6rpx;
}

.user-role {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-info {
  flex: 1;
}

.bind-phone-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 26rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  z-index: 101;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.modal-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-bottom: 30rpx;
}

.phone-input {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  text-align: center;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  padding: 0;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: #1AAD19;
  color: #fff;
}

/* Tab切换 */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1AAD19;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #1AAD19;
  border-radius: 3rpx;
}

/* Tab内容 */
.tab-content {
  padding: 30rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 疗程卡列表 */
.card-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
}

.card-item.expired {
  background: linear-gradient(135deg, #999 0%, #666 100%);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-name {
  font-size: 34rpx;
  font-weight: 600;
}

.card-status {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.times-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.times-value {
  font-size: 48rpx;
  font-weight: bold;
}

.card-expire {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 预约列表 */
.appointment-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.apt-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.apt-service {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.apt-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
  color: #666;
}

.apt-status.confirmed {
  background: #e8f5e9;
  color: #1AAD19;
}

.apt-status.completed {
  background: #e3f2fd;
  color: #2196f3;
}

.apt-status.cancelled {
  background: #ffebee;
  color: #f44336;
}

.apt-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.apt-actions {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn {
  font-size: 24rpx;
  color: #f44336;
  background: #fff;
  border: 1rpx solid #f44336;
}

/* 功能菜单 */
.menu-section {
  margin: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 36rpx;
  color: #ccc;
}

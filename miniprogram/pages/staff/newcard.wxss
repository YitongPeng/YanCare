/* pages/staff/newcard.wxss */
.newcard-page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 步骤指示 */
.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  background: #fff;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  background: #ddd;
  color: #999;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.step.active .step-num {
  background: #1AAD19;
  color: #fff;
}

.step-text {
  font-size: 24rpx;
  color: #999;
}

.step.active .step-text {
  color: #1AAD19;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #ddd;
  margin: 0 20rpx;
  margin-bottom: 30rpx;
}

.step-line.active {
  background: #1AAD19;
}

/* 返回按钮 */
.back-nav {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  color: #1AAD19;
  font-size: 28rpx;
}

.back-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 内容区 */
.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 已选信息 */
.selected-info {
  background: #f5f5f5;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.selected-info .label {
  color: #999;
  font-size: 26rpx;
}

.selected-info .value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

/* 输入框 */
.input-box {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.name-input {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}

/* 服务选择 */
.service-list {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.service-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  border: 4rpx solid transparent;
  position: relative;
}

.service-item.selected {
  border-color: #1AAD19;
  background: #e8f5e9;
}

.service-check {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #1AAD19;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  opacity: 0;
}

.service-item.selected .service-check {
  opacity: 1;
}

.service-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.service-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 卡列表 */
.card-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.card-item {
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  border: 4rpx solid transparent;
}

.card-item.selected {
  border-color: #1AAD19;
  background: #e8f5e9;
}

.card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-info {
  font-size: 24rpx;
  color: #666;
}

.card-note {
  font-size: 22rpx;
  color: #ff9800;
  margin-top: 8rpx;
}

/* 按钮 */
.next-btn {
  margin-top: 20rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

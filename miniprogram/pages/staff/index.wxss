/* pages/staff/index.wxss */
.staff-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx;
  color: #fff;
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-user {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计 */
.stats-section {
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.store-stats-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.store-name-badge {
  font-size: 26rpx;
  color: #667eea;
  background: #eef2ff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: flex;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.stat-item.highlight .stat-value {
  color: #1AAD19;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 功能菜单 */
.menu-section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.menu-icon {
  font-size: 50rpx;
  margin-right: 24rpx;
}

.menu-info {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 今日预约 */
.appointments-section {
  padding: 0 30rpx;
}

.empty {
  text-align: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  color: #999;
}

.appointment-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.apt-time {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  margin-right: 24rpx;
}

.apt-info {
  flex: 1;
}

.apt-service {
  font-size: 28rpx;
  color: #333;
}

.apt-customer {
  font-size: 24rpx;
  color: #999;
}

.apt-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: #fff3e0;
  color: #ff9800;
}

.apt-status.completed {
  background: #e8f5e9;
  color: #1AAD19;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  display: flex;
  gap: 20rpx;
}

.back-btn {
  flex: 1;
  padding: 24rpx 0;
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.logout-btn {
  flex: 1;
  padding: 24rpx 0;
  background: #fff;
  border: 1rpx solid #ff4d4f;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #ff4d4f;
  text-align: center;
}

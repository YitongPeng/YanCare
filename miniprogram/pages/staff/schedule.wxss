/* pages/staff/schedule.wxss */
.schedule-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 步骤指示 */
.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  background: #fff;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  background: #ddd;
  color: #999;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.step.active .step-num {
  background: #1AAD19;
  color: #fff;
}

.step-text {
  font-size: 24rpx;
  color: #999;
}

.step.active .step-text {
  color: #1AAD19;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #ddd;
  margin: 0 20rpx;
  margin-bottom: 30rpx;
}

.step-line.active {
  background: #1AAD19;
}

/* 返回按钮 */
.back-nav {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  color: #1AAD19;
  font-size: 28rpx;
}

.back-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 内容区 */
.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx;
}

.section.my-schedules {
  margin-top: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 0;
}

.section .section-title {
  margin-bottom: 24rpx;
}

.reset-btn {
  font-size: 26rpx;
  color: #1AAD19;
  padding: 8rpx 20rpx;
  border: 1rpx solid #1AAD19;
  border-radius: 20rpx;
}

/* 已选信息 */
.selected-info {
  background: #f5f5f5;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.selected-info .label {
  color: #999;
  font-size: 26rpx;
}

.selected-info .value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

/* 门店选择 */
.store-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.store-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.store-item .store-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.store-item .store-address {
  font-size: 24rpx;
  color: #999;
  flex: 2;
}

.store-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* 日期选择 */
.date-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.date-item {
  width: calc(25% - 12rpx);
  padding: 20rpx 0;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  border: 2rpx solid transparent;
}

.date-item:active {
  background: #e8f5e9;
}

.date-weekday {
  font-size: 22rpx;
  color: #999;
}

.date-day {
  font-size: 28rpx;
  color: #333;
  margin-top: 6rpx;
}

/* 时间选择 */
.time-row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 30rpx;
}

.time-picker {
  flex: 1;
}

.time-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.time-separator {
  padding: 0 20rpx 20rpx;
  color: #999;
}

.picker-value {
  background: #f5f5f5;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  font-size: 34rpx;
  color: #333;
  text-align: center;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 10rpx;
}

/* 排班列表 */
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.schedule-main {
  flex: 1;
}

.schedule-store {
  font-size: 28rpx;
  font-weight: 500;
  color: #667eea;
  margin-bottom: 8rpx;
}

.schedule-detail {
  font-size: 26rpx;
  color: #666;
}

.schedule-date {
  margin-right: 20rpx;
}

.schedule-time {
  color: #999;
}

.delete-btn {
  font-size: 24rpx;
  color: #f44336;
  padding: 10rpx 20rpx;
}

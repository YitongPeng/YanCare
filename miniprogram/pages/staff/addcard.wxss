/* pages/staff/addcard.wxss */
.addcard-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  padding-bottom: 140rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #1AAD19;
  color: #fff;
}

/* 搜索结果 */
.search-result {
  margin-top: 20rpx;
}

.user-item {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid transparent;
}

.user-item.selected {
  background: #e8f5e9;
  border-color: #1AAD19;
}

.user-name {
  font-size: 30rpx;
  color: #333;
}

.user-phone {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.selected-user {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #e8f5e9;
  border-radius: 8rpx;
  color: #1AAD19;
  font-size: 28rpx;
}

/* 卡列表 */
.card-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-item {
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.card-item.selected {
  background: #e8f5e9;
  border-color: #1AAD19;
}

.card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-info {
  font-size: 24rpx;
  color: #666;
}

.card-info .dot {
  margin: 0 8rpx;
  color: #ddd;
}

.card-note {
  font-size: 22rpx;
  color: #ff9800;
  margin-top: 8rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
}

.confirm-btn {
  width: 100%;
}

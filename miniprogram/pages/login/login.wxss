/* pages/login/login.wxss */
.login-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f5e9 0%, #ffffff 100%);
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  padding: 80rpx 0;
}

.logo {
  font-size: 72rpx;
  font-weight: bold;
  color: #1AAD19;
  margin-bottom: 20rpx;
}

.slogan {
  font-size: 28rpx;
  color: #666;
}

/* 角色选择 */
.role-section {
  margin-bottom: 40rpx;
}

.role-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.role-options {
  display: flex;
  gap: 30rpx;
}

.role-card {
  flex: 1;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  border: 4rpx solid transparent;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.role-card.active {
  border-color: #1AAD19;
  background: #f0fff0;
}

.role-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.role-icon-img {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.role-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.role-desc {
  font-size: 24rpx;
  color: #999;
}

/* 输入区域（顾客和员工通用） */
.name-input-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.input-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: center;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.input {
  background: #f5f5f5;
  border: none;
  border-radius: 12rpx;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 登录按钮 */
.login-btn-section {
  padding: 20rpx 0;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 !important;
}

/* 微信图标（保留兼容） */
.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 隐私协议勾选 */
.agreement-section {
  margin-bottom: 30rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.checkbox.checked {
  background: #1AAD19;
  border-color: #1AAD19;
  color: #fff;
}

.checkbox text {
  font-size: 24rpx;
  font-weight: bold;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.agreement-text .link {
  color: #1AAD19;
}

/* pages/index/index.wxss */
.index-page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #1AAD19 0%, #129611 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 标签导航 */
.tab-nav {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1AAD19;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #1AAD19;
  border-radius: 3rpx;
}

/* 滑动区域 */
.content-swiper {
  flex: 1;
  width: 100%;
  min-height: 800rpx;
  height: calc(100vh - 240rpx);
}

.tab-content {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

/* ========== 服务页面样式 ========== */
.service-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.service-img {
  width: 100%;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.service-img-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.service-img-half {
  flex: 1;
  height: 280rpx;
  border-radius: 12rpx;
}

.service-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.service-duration {
  font-size: 26rpx;
  color: #1AAD19;
  margin-bottom: 16rpx;
}

.service-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

/* 服务列表 */
.service-list {
  margin-top: 20rpx;
}

.service-list-item {
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.item-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #1AAD19;
  background: #e8f5e9;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 适宜人群 */
.service-suitable {
  background: #fff8e1;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.suitable-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f57c00;
  margin-bottom: 12rpx;
}

.suitable-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suitable-tag {
  font-size: 24rpx;
  color: #f57c00;
  background: #fff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 功效列表 */
.service-benefits {
  margin-top: 16rpx;
}

.benefit-item {
  font-size: 26rpx;
  color: #333;
  padding: 12rpx 0;
  padding-left: 30rpx;
  position: relative;
}

.benefit-item::before {
  content: '✓';
  position: absolute;
  left: 0;
  color: #1AAD19;
  font-weight: bold;
}

/* 高亮区块 */
.service-highlight {
  background: #e8f5e9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.highlight-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1AAD19;
  margin-bottom: 10rpx;
}

.highlight-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.7;
}

.service-note {
  text-align: center;
  font-size: 28rpx;
  color: #1AAD19;
  font-weight: 500;
  padding: 20rpx;
  background: #f0fff0;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

/* ========== 门店页面样式 ========== */
.store-list {
  padding: 10rpx 0;
}

.store-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.store-card.nearest {
  border: 2rpx solid #1AAD19;
}

.nearest-tag {
  position: absolute;
  top: 0;
  right: 30rpx;
  background: #1AAD19;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 0 0 10rpx 10rpx;
}

.store-info {
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.store-address,
.store-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.store-distance-info {
  font-size: 26rpx;
  color: #1AAD19;
  margin-top: 10rpx;
}

.driving-time {
  margin-left: 8rpx;
  color: #999;
}

.store-actions {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.action-btns {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  color: #666;
}

.action-btn.primary {
  background: #1AAD19;
  color: #fff;
}

/* ========== 团队页面样式 ========== */
.team-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.team-img {
  width: 100%;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.team-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.team-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.team-values {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

.value-item {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
}

.value-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.value-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.value-desc {
  font-size: 24rpx;
  color: #999;
}

/* 通用样式 */
.loading,
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}
